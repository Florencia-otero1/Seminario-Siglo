<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.app.controllers.ReporteController">
    <center>
        <VBox alignment="CENTER" spacing="10" maxWidth="500">
            <Label text="Reportar mascota perdida / encontrada / callejera" style="-fx-font-size:18px; -fx-font-weight:bold;"/>

            <HBox spacing="10">
                <Label text="Tipo de reporte:"/>
                <ComboBox fx:id="cbTipoReporte" promptText="Seleccione tipo"/>
            </HBox>

            <Label text="Nombre de la mascota (opcional):"/>
            <TextField fx:id="txtNombreMascota" promptText="Ej: Toby o dejar vacío si no se sabe"/>

            <HBox spacing="10">
                <Label text="Especie:"/>
                <ComboBox fx:id="cbEspecie" promptText="Seleccione especie"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Sexo:"/>
                <ComboBox fx:id="cbSexo" promptText="Seleccione sexo"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Color:"/>
                <TextField fx:id="txtColor" promptText="Color"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Edad aproximada:"/>
                <TextField fx:id="txtEdad" promptText="Edad (número)"/>
            </HBox>

            <TextArea fx:id="txtDescripcion" promptText="Descripción del animal" prefRowCount="3" wrapText="true"/>
            <TextField fx:id="txtUbicacion" promptText="Ubicación (zona o dirección)"/>

            <HBox spacing="10">
                <TextField fx:id="txtFoto" promptText="Ruta o URL de imagen" prefWidth="320"/>
                <Button text="Seleccionar imagen" onAction="#onSeleccionarImagen"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Guardar reporte" onAction="#onGuardar"/>
                <Button text="Volver al menú" onAction="#onVolver"/>
            </HBox>

            <Label fx:id="lblEstado" textFill="red"/>
        </VBox>
    </center>
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
</BorderPane>
