<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.app.controllers.LoginController">
    <center>
        <VBox spacing="12" alignment="CENTER" maxWidth="360">
            <Label text="Iniciar sesión" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            <TextField fx:id="txtEmail" promptText="Email" />
            <PasswordField fx:id="txtPassword" promptText="Contraseña" />
            <HBox spacing="10">
                <Button text="Ingresar" onAction="#onLogin"/>
                <Button text="Registrarse" onAction="#onIrARegistro"/>
            </HBox>
            <Label fx:id="lblEstado" textFill="red"/>
        </VBox>
    </center>
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
</BorderPane>
