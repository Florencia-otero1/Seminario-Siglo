<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.app.controllers.DifusionController"
      spacing="15" alignment="CENTER">
    <padding><Insets top="20" right="30" bottom="20" left="30"/></padding>

    <Label text="📢 Difusión de Reportes" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TableView fx:id="tablaReportes" prefWidth="600">
        <columns>
            <TableColumn fx:id="colTipo" text="Tipo de reporte" prefWidth="150"/>
            <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="250"/>
            <TableColumn fx:id="colUbicacion" text="Ubicación" prefWidth="200"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="🔄 Actualizar" onAction="#onActualizar"/>
        <Button text="⬅️ Volver" onAction="#onVolver"/>
    </HBox>

    <Label fx:id="lblEstado" style="-fx-font-size: 14px;"/>
</VBox>
